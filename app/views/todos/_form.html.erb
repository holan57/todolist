<% if @todo.errors.present? %>
  <div class="alert alert-danger" role="alert">
    <ul>
      <% @todo.errors.each do |error, message| %>
        <li> <%= "#{error.capitalize} #{message}" %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form container">
  <%= form_for @todo do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :duedate %>
    <%= f.text_field :duedate, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :note %>
    <%= f.text_area :note, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :detail %>
    <%= f.text_area :detail, class: "form-control" %>
  </div>
    <%= f.submit %>
  <% end %>
  <%= link_to 'Back to index', todos_path %>
</div>
